<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <property name="SQL_PATTERN" value="[%d] [${PID:- } %t\\(%logger\\) : %p]%n%class.%method\\(%file:%line\\)%n%m%n%n"/>
    <property name="CONSOLE_LOG_PATTERN" value="[%X{receiveTime}%d] [${PID:- } %t\\(%logger\\) : %p]%X{requestInfo}%n%class.%method\\(%file:%line\\)%n%m%n%n"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <appender name="SQL" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${SQL_PATTERN}</pattern>
        </encoder>
    </appender>
    <logger name="sqlLog" level="debug" additivity="false">
        <appender-ref ref="SQL" />
    </logger>


    <logger name="io.undertow" level="warn"/>
    <logger name="freemarker" level="warn"/>

    <logger name="com.github.common.repository" level="warn"/>
    <logger name="com.github.user.repository" level="warn"/>
    <logger name="com.github.product.repository" level="warn"/>
    <logger name="com.github.order.repository" level="warn"/>
    <logger name="com.github.common.mvc" level="warn"/>

    <logger name="com.netflix" level="warn"/>
    <logger name="com.github" level="warn"/>
    <logger name="com.zaxxer" level="warn"/>
    <logger name="com.sun" level="warn"/>

    <logger name="org.springframework" level="warn"/>
    <logger name="org.hibernate" level="warn"/>
    <logger name="org.mybatis" level="warn"/>
    <logger name="org.apache" level="warn"/>
    <logger name="org.jboss" level="warn"/>

    <logger name="io.lettuce" level="warn"/>
    <logger name="io.netty" level="warn"/>
    <logger name="reactor" level="warn"/>


    <root level="debug">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
